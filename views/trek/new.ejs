<% include ../partials/header %> 
<div class="container">
    <h2>Add the trek you'll love to trek</h2>
    <form action="/treks" method="POST">
        <div class="form-row row">
            <div class="form-group col-md-6">
                <label>Trek Name</label>
                <input type="text" class="form-control" name="trek[name]" placeholder="Name">
            </div>
            <div class="form-group col-md-6" >
                <label>Image</label>
                <input type="text" class="form-control" name="trek[images]" placeholder="Image url">
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-3 col-sm-6">
                <div>
                    <label>Cost</label>
                </div>
                <div >
                    <input type="text" class="form-control" name="trek[cost]" placeholder="Ammount">
                </div>
            </div>
            <div class="form-group col-md-3 col-sm-6">
                <div >
                    <label>No. of Days</label>
                </div>
                <div>
                    <input type="text" class="form-control" name="trek[days]" placeholder="Days">
                </div>
            </div>
            <div class="form-group col-md-3 col-sm-6">
                <div >
                    <label>Best Time of the Year</label>
                </div>
                <div>
                    <input type="text" class="form-control" name="trek[bestTime]" placeholder="Best Time to Visit">
                </div>
            </div>
            <div class="form-group col-md-3 col-sm-6">
                <div >
                    <label>Location</label>
                </div>
                <div>
                    <input type="text" class="form-control" name="trek[location]" placeholder="Location">
                </div>
            </div>
            <div class="form-group col-md-3 col-sm-6">
                <div>
                    <label>Latitude</label>
                </div>
                <div>
                    <input type="text" class="form-control" name="trek[lat]" placeholder="Latitude">
                </div>
            </div>
            <div class="form-group col-md-3 col-sm-6">
                <div>
                    <label>Longitude</label>
                </div>
                <div>
                    <input type="text" class="form-control" name="trek[lon]" placeholder="Longitude">
                </div>
            </div>
        </div>
        <div class="form-group">
            <label>Description</label>
            <div class="input-group">
                <textarea class="form-control" aria-label="With textarea"  name="trek[description]" placeholder="Description"></textarea>
            </div>
        </div>
        <button class="btn bton-theme">Submit!</button>
    </form>
</div>
<% include ../partials/footer %>