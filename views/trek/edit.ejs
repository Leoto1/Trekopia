<% include ../partials/header %>
    <br>
    <div class="container">
        <form action="/treks/<%= trek._id%>?_method=PUT" method="POST">
            <div class="form-row row">
                <div class="form-group col-md-6">
                    <label>Trek Name</label>
                    <input type="text" class="form-control" name="trek[name]" placeholder="Name" value="<%=trek.name%>">
                </div>
                <div class="form-group col-md-6">
                    <label>Image</label>
                    <input type="text" class="form-control" name="trek[images]" placeholder="Image url" value="<%=trek.images%>">
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-3 col-sm-6">
                    <div>
                        <label>Cost</label>
                    </div>
                    <div>
                        <input type="text" class="form-control" name="trek[cost]" placeholder="Ammount" value=<%=trek.cost%>>
                    </div>
                </div>
                <div class="form-group col-md-3 col-sm-6">
                    <div>
                        <label>No. of Days</label>
                    </div>
                    <div>
                        <input type="text" class="form-control" name="trek[days]" placeholder="Days" value=<%=trek.days%>>
                    </div>
                </div>
                <div class="form-group col-md-3 col-sm-6">
                    <div>
                        <label>Best Time of the Year</label>
                    </div>
                    <div>
                        <input type="text" class="form-control" name="trek[bestTime]" placeholder="Best Time to Visit" value="<%=trek.bestTime%>">
                    </div>
                </div>
                <div class="form-group col-md-3 col-sm-6">
                    <div>
                        <label>Location</label>
                    </div>
                    <div>
                        <input type="text" class="form-control" name="trek[location]" placeholder="Location" value="<%=trek.location%>">
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label>Description</label>
                <div class="input-group">
                    <textarea class="form-control" aria-label="With textarea" name="trek[description]" placeholder="Description"><%=trek.description%></textarea>
                </div>
            </div>
            <button class="btn bton-theme">Submit!</button>
        </form>
    </div>
    <% include ../partials/footer %>