<% include partials/header %>
<br>
<%if(errors){%>
    <div>
        <% errors.forEach(function(error){ %>
            <%= error.msg %><br>
        <% }) %>
    </div>
    <%}%>
    <div class="auth-form border rounded">
        <h2 class="text-center">Sign Up</h2>
    <form class="form-group" action="/register" method="POST">
        <div class="form-group">
        <input class="form-control" type='text' name="user[firstName]" placeholder="First Name">
        </div>
        <div class="form-group">
        <input class="form-control" type='text' name="user[lastName]" placeholder="Last Name">
        </div>
        <div class="form-group">
        <input class="form-control" type='email' name="user[email]" placeholder="E-Mail">
        </div>
        <div class="form-group">
        <input class="form-control" type='password' name="user[password]" placeholder="Password">
        </div>
        <button class="form-control btn bton-theme">Sign Up</button>
    </form>
    </div>
<% include partials/footer %>